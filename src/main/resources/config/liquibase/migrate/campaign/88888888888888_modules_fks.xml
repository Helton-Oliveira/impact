<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">


    <!-- modules FKs-->

    <!-- user_id -->
    <changeSet id="f26898b0-5a2b-45e4-a898-b05a2b95e40f" author="heltonOliveira">
        <addForeignKeyConstraint baseTableName="cam_campaigns"
                                 baseColumnNames="user_id"
                                 constraintName="fk_cam_campaigns__user_id"
                                 referencedTableName="usr_users"
                                 referencedColumnNames="id"/>
    </changeSet>

    <!-- file_id -->
    <changeSet id="ab0cec54-260d-46ea-8cec-54260d36eae2" author="heltonOliveira">
        <addForeignKeyConstraint baseTableName="cam_campaigns"
                                 baseColumnNames="file_id"
                                 constraintName="fk_cam_campaigns__file_id"
                                 referencedTableName="adm_files"
                                 referencedColumnNames="id"/>
    </changeSet>


</databaseChangeLog>